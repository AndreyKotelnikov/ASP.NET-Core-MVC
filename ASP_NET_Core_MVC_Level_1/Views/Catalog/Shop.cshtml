@model CatalogViewModel

@{
    ViewData["Title"] = "Shop";
    Layout = "_LayoutBase";
}

<h2>@ViewBag.Title</h2>

<partial name="Partial/_AdvertisementPartial"/>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSideBarPartial" />
            </div>
            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">Features Items</h2>
                    @foreach (var product in Model.Products)
                    {
                       <partial name="Partial/_ProductPartial" model="@product"/>
                    }
                    <ul class="pagination">
                        <li class="active"><a href="">1</a></li>
                        <li><a href="">2</a></li>
                        <li><a href="">3</a></li>
                        <li><a href="">&raquo;</a></li>
                    </ul>
                </div><!--features_items-->
            </div>
        </div>
    </div>
</section>
