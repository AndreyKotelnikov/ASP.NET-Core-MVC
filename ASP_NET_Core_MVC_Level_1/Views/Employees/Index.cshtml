@model System.Collections.Generic.IEnumerable<ASP_NET_Core_MVC_Level_1.ViewModels.EmployeeView>

@{
    ViewBag.Title = "Сотрудники";
}

<h2>@ViewBag.Title</h2>
<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>SurName</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var employee in Model)
    {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@employee.Id">
                    @employee.Id
                </a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@employee.Id">
                    @employee.Name
                </a>
            </td>
            <td>
                <a asp-action="DetailsSearchByNames" 
                   asp-route-name="@employee.Name" 
                   asp-route-secondName="@employee.SecondName">
                    @employee.SecondName
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>